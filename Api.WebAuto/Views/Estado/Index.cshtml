@{
    ViewData["Title"] = "Estado";
}
<h1 class ="text-center">Estado</h1>
<body onload="Obtener()"></body>
<table class="table text-center" >
    <thead>
        <tr>
            @*<th scope="col" id="id">Id</th>*@
            <th scope="col">Estado</th>
            <th scope="col">Actualizar</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody  id="tblEstado">
    </tbody>
</table>
<div>
    <button type="button" class="editar edit-modal btn btn-success form-control" data-target= "#agrega" data-toggle="modal" onclick="LimpiaTexto()">Agregar</button>
</div>
<div class="modal" id="imodal"  tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title col-11 text-center">Modificar Estado</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                 <div class="form-group">
                    <label>Estado</label>
                        <input  type = "text" id="txtEstado" placeholder="Nombre" class="form-control"/>
                    </div>
      </div>
      <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-success actualizo" data-dismiss="modal" onclick="Modificar()" >Modificar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.reload()">Cerrar</button>
      </div>
    
  </div>
</div>
</div>
@*Aqui empieza el codigo nuevo*@
<div class="modal" id="agrega"  tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title col-11 text-center">Agregar Auto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
  <div class="modal-body">
        @*div class="form-group">
                    <label>Nombre</label>
                        <input  type = "text" id="nombre" placeholder="Nombre" class="form-control"/>
                    </div>*@
       <div class="form-group">
           <div class="form-group">
                <label>Estado</label>
                        <input  type = "text" id="txtEstadoA" placeholder="Nombre" class="form-control"/>
                    </div>
      </div>
      <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-success" data-dismiss="modal" onclick="Agregar()">Agregar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.reload()">Cerrar</button>
      </div>
    
  </div>
</div>
</div>
</div>
</div>
<div class="modal" id="eliminar"  tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title col-11 text-center">Eliminar Estado</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer justify-content-between">
        <button type="button"  class="btn btn-success" data-dismiss="modal" onclick="Eliminar()">Borrar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.reload()">Cerrar</button>
      </div>
    
  </div>
</div>
</div>
@section Scripts{
    <script src= "~/js/Estado.js"></script>
}