@{
    ViewData["Title"] = "Modelos";
}
<h1 class ="text-center">Modelos</h1>
<body onload="Obtener()"></body>
<table class="table text-center">
    <thead>
        <tr>
            @*<th scope="col" id="id">Id</th>*@
            <th scope="col">Marca</th>
            <th scope="col">Modelo</th>
            <th scope="col">Actualizar</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody  id="tblModelo">
    </tbody>
</table>
<div>
    <button type="button" class="editar edit-modal btn btn-success form-control" data-target= "#agrega" data-toggle="modal" onclick="CargaCombosAgrega()">Agregar</button>
</div>
<div class="modal" id="imodal"  tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title col-11 text-center">Modificar Modelos</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <div class="form-group">
                    <label>Marca</label>
                   <select class="form-control" id="cmbMarca">
                        
                   </select>
                    </div>
                 <div class="form-group">
                    <label>Modelo</label>
                        <input type = "text" id="txtModelo" placeholder="Nombre" class="form-control"/>
                    </div>
      </div>
      <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-success btnModifica" data-dismiss="modal" onclick="Modificar()">Modificar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.reload()">Cerrar</button>
      </div>
    
  </div>
</div>
</div>
@*Aqui empieza el codigo nuevo*@
<div class="modal" id="agrega"  tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title col-11 text-center">Agregar Modelo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
  <div class="modal-body">
        <div class="form-group">
                    <label>Marca</label>
                   <select class="form-control" id="cmbMarcaA"></select>
                    </div>
                 <div class="form-group">
                    <label>Modelo</label>
                        <input type = "text" id="txtModeloA" placeholder="Nombre" class="form-control"/>
                    </div>
      <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-success" data-dismiss="modal" onclick="Agregar()">Agregar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.reload()">Cerrar</button>
      </div>
    
  </div>
</div>
</div>
</div>
</div>
<div class="modal" id="eliminar"  tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title col-11 text-center">Eliminar Auto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer justify-content-between">
        <button type="button"  class="btn btn-success" data-dismiss="modal" onclick="Eliminar()">Borrar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.reload()">Cerrar</button>
      </div>
    
  </div>
</div>
</div>
@section Scripts{
    <script src= "~/js/Modelo.js"></script>
}